{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<main role="main">
    <article class="{{post_class}}">

        <header>
            <h1 >{{title}}</h1>
            <section>
                <time datetime="{{date format="YYYY-MM-DD"}}">‚è∞ {{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on üîñ "}}
            </section>
        </header>

        <section>
            {{content}}
        </section>

        <footer>

        {{!-- Everything inside the #author tags pulls data from the author --}}
        {{#author}}

            <!-- {{#if image}}
            <figure class="author-image">
                <a class="img" href="{{url}}" style="background-image: url({{image}})"><span class="hidden">{{name}}'s Picture</span></a>
            </figure>
            {{/if}} -->

            <section>
                <p>Written by: <a href="{{url}}">{{name}}</a></p>

                {{#if bio}}
                    <p>{{bio}}</p>
                {{/if}}
                <div>
                    {{#if location}}<span class="icon-location">{{location}}</span>{{/if}}
                    {{#if website}}<span class="icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
                </div>
            </section>

        {{/author}}

            <aside>
              <h2>Share:</h2>
              <div class="social-sharing" data-permalink="http://labs.carsonshold.com/social-sharing-buttons">

                <!-- https://developers.facebook.com/docs/plugins/share-button/ -->
                <a target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}" class="share-facebook">
                  <span class="soc icon icon-facebook" aria-hidden="true"></span>
                  <span class="share-title">Share</span>
                </a>

                <!-- https://dev.twitter.com/docs/intents -->
                <a target="_blank" href="http://twitter.com/share?text={{encode title}}&amp;via=mathdroid&amp;url={{url absolute="true"}}" class="share-twitter">
                  <span class="soc icon icon-twitter" aria-hidden="true"></span>
                  <span class="share-title">Tweet</span>
                </a>

                <!-- https://developers.google.com/+/web/share/ -->
                <a target="_blank" href="http://plus.google.com/share?url={{url absolute="true"}}" class="share-google">
                  <span class="soc icon icon-google" aria-hidden="true"></span>
                  <span class="share-title">+1</span>
                </a>

                <!-- https://www.reddit.com/buttons -->
                <a target="_blank" href="http://www.reddit.com/submit?url={{url absolute="true"}}&amp;title={{encode title}}" class="share-reddit">
                  <span class="soc icon icon-reddit" aria-hidden="true"></span>
                  <span class="share-title">Reddit</span>
                </a>

                <!-- https://developer.linkedin.com/plugins/share -->
                <a target="_blank" href="http://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&amp;title={{encode title}}" class="share-linkedin">
                  <span class="soc icon icon-linkedin" aria-hidden="true"></span>
                  <span class="share-title">Share</span>
                </a>

                <!-- http://blogs.skype.com/2015/11/04/introducing-share-button-effortless-sharing-that-sparks-richer-conversations/ -->
                <a target="_blank" href="https://web.skype.com/share?url={{url absolute="true"}}&lang=en-us" class="share-skype">
                  <span class="soc icon icon-skype" aria-hidden="true"></span>
                  <span class="share-title">Share</span>
                </a>

              </div>
            </aside>
            <hr />

            {{!-- Email subscribe form at the bottom of the page --}}
            {{#if @labs.subscribers}}
            <section>
                <h3>Subscribe to {{@blog.title}}</h3>
                <p>Get the latest posts delivered right to your inbox.</p>
                {{subscribe_form placeholder="Your email address"}}
                <span>or subscribe <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/">via RSS</a> with Feedly!</span>
            </section>
            {{/if}}

        </footer>

    </article>
</main>

{{!-- Links to Previous/Next posts --}}
<aside>
    {{#next_post}}
    <p>
      next article:
    </p>
    <a href="{{url}}">
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
        </section>
    </a>
    {{/next_post}}
    {{#prev_post}}
    <p>
      previous article:
    </p>
    <a href="{{url}}">
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
        </section>
    </a>
    {{/prev_post}}
</aside>

{{/post}}
